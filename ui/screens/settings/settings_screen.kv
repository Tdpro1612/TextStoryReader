<SettingsScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: dp(20)
        spacing: dp(10)

        Label:
            text: 'Cài Đặt Ứng Dụng'
            font_size: '25sp'
            halign: 'center'
            valign: 'middle'
            text_size: self.size

        Button:
            text: 'Cài đặt 1'
            size_hint_y: None
            height: dp(60)

        Button:
            text: 'Cài đặt 2'
            size_hint_y: None
            height: dp(60)

        Widget: # Spacer
            size_hint_y: 1

        Button:
            text: 'Back'
            on_release: app.root.current = 'reader_screen'
            size_hint_y: None
            height: dp(60)